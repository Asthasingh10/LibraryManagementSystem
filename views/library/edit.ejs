<% layout("/layouts/boilerplate") -%>

<div class="row">
    <div class="col-8 offset-2 mt-4">
      <div class="text">
        <div class="wavy">
          <span style="--i:1;">E</span>
          <span style="--i:2;">D</span>
          <span style="--i:3;">I</span>
          <span style="--i:4;">T</span>
          <span style="--i:5;"></span>
          <span style="--i:6;"></span>
          <span style="--i:7;">N</span>
          <span style="--i:8;">A</span>
          <span style="--i:9;">M</span>
          <span style="--i:10;">E</span>
        </div>
      </div>
    <form action="/library/<%= book._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
         <div  class="mb-3">
               <label for="title" class="form-label">Title</label>
               <input type="text" class="form-control" value="<%= book.title %>"  name="library[title]" required>
               <div class="valid-feedback">Title looks good!</div>
               <div class="invalid-feedback">Please enter title of book</div>
              </div>
         <div  class="mb-3">
           <label for="title" class="form-label">Author Name</label>
           <input type="text" class="form-control"value="<%= book.author %>" name="library[author]" required>
           <div class="valid-feedback">Author Name looks good!</div>
           <div class="invalid-feedback">Please enter author name of book</div>
         </div>
         <div  class="mb-3">
          <label for="image" class="form-label">New Book Image </label>
          <input type="file" class="form-control" name="library[image]" >
        </div>
         <div class="mb-3">
           <label for="category" class="form-label">Category</label>
           <select  name="library[category]"  class="form-select form-control" >
            <option  disabled selected value="<%= book.category %>">Choose category...</option>
            <option  name="library[category]"  value="fiction">Fiction</option>
            <option  name="library[category]"  value="non-fiction">Non-Fiction</option>
            <option  name="library[category]"  value="Poetry">Poetry</option>
            <option  name="library[category]"  value="Drama/Play">Drama/Play</option>
            <option  name="library[category]"  value="Children's Book">Children's Book</option>
            <option  name="library[category]"  value="Reference Book">Reference Book</option>
            <option  name="library[category]"  value="Religion and Spirituality">Religion and Spirituality</option>
            <option  name="library[category]"  value="Travel">Travel</option>
            <option  name="library[category]"  value="Cookbooks">Cookbooks</option>
            <option  name="library[category]"  value="Graphic Novels/Comics">Graphic Novels/Comics</option>
          </select>
         </div>
         <div class="mb-3">
           <label for="description" class="form-label">Description</label>
           <textarea  name="library[description]" class="form-control"  required><%= book.description %></textarea>
           <div class="invalid-feedback">Please enter description of book</div>
         </div>  
           <button class="btn btn-dark mt-3">Edit</button> <br> <br></b>
    </form>
   </body>
   </div>
   </div>