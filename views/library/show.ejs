<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <div class="text">
            <div class="wavy">
                <span style="--i:1;">B</span>
                <span style="--i:2;">O</span>
                <span style="--i:3;">O</span>
                <span style="--i:4;">K</span>
                <span style="--i:5;"> </span>
                <span style="--i:6;">D</span>
                <span style="--i:7;">E</span>
                <span style="--i:8;">T</span>
                <span style="--i:9;">A</span>
                <span style="--i:10;">I</span>
                <span style="--i:11;">L</span>
            </div>
        </div>
        
    </div>
    <div class="card col-6 offset-2">
        <img src="<%= book.image.url %>"  class="card-img-top show-img" name="libray[image]" alt="Library_image" >
        <div class="card-body">
            <i>Created By: <%= book.owner.username %></i>
            <p class="card-text"><b><%= book.title %></b><br>
              <%= book.author %> <br>
              <%= book.category %> <br>
              <%= book.description %> <br>
           </p>
        </div>
    </div>
    <br>
   <div class="btns">
        <a href="/library/<%=book._id %>/edit" class="btn btn-dark offset-3">Edit</a>
        <form action="/library/<%= book._id %>?_method=DELETE" method="post">
            <button  class="btn btn-dark offset-4" onclick="showAlert()">Delete</button>
        </form>
    </div>

</div>